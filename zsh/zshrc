# <---------- Setting history ---------->

function peco-history-selection() {
    BUFFER=`history -n -r 1 | awk '!a[$0]++' | peco --query "$LBUFFER"`
    CURSOR=$#BUFFER
    zle reset-prompt
}

HISTFILE=${HOME}/.zsh_history
HISTSIZE=1000
SAVEHIST=100000

zle -N peco-history-selection
bindkey '^R' peco-history-selection

